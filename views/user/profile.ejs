<% include ../partials/header.ejs %>

<img src='<%= imgThumb %>'>
<h2><%= data.first %></h2>
<h3><%= data.job %> | <%= data.about %></h3>

<br><br>
<% if (postData.length === 0) { %>
<h3>No posts by <%= data.first %> yet!</h3>
<% } else { %>
<% for (var i = 0; i < postData.length; i++) { %>
	<a href='../<%= postData[i].neighborhoodId %>/<%= postData[i].categoryId %>'><%= postData[i].title %></a>
	<br>
	<%= postData[i].content %>
<% } %>
<% } %>



<% include ../partials/footer.ejs %>