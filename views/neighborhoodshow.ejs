<% include partials/header.ejs %>

<div class="intro">
<h2>Welcome to <%= data.name %>: 
<br>
<%= data.description %></h2>

<div class="category browse">
<a href='<%= data.id %>/1'>Day Out in <%= data.name %></a>
<br>
<a href='<%= data.id %>/2'>Night Out in <%= data.name %></a>
<br>
<a href='<%= data.id %>/3'>Eat & Drink in <%= data.name %></a>
<br>
<a href='<%= data.id %>/4'>Secret Gems in <%= data.name %></a>
<br>
<a href='<%= data.id %>/5'>Getting Around in <%= data.name %></a>
<br>
</div>

<div class="insta container">
	<div class="hashtag">
	<h4>#<%= data.igtag %></h4>
	</div>
	<div id="carousel-insta" class="carousel slide" data-ride="carousel" interval='2000'>
  		<div class="carousel-inner" text-center>
    		<div class="item active">
      			<img src=<%= links[0] %> alt="...">
			</div>

		<% for (var i = 1; i < 20; i++) { %>
    		<div class="item">
				<img src='<%= links[i] %>' alt="...">
			</div>
				<% } %>
  		</div>
 
	  	<a class="left carousel-control" href="#carousel-insta" role="button" data-slide="prev">
	    	<span class="glyphicon glyphicon-chevron-left"></span>
	  	</a>
	  	<a class="right carousel-control" href="#carousel-insta" role="button" data-slide="next">
	    	<span class="glyphicon glyphicon-chevron-right"></span>
	  	</a>
	</div> 
</div>







