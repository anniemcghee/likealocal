<% include partials/header.ejs %>

<div class="intro">
<div class="row text-center title">
<h2>Welcome to <%= data.name %>!</h2>
</div>
<div class="row text-center title">
<h3><%= data.description %></h3>
</div>
<div class="category browse">
<div class="row">
	<div class="col-md-1"></div>
    <div class="col-md-2">
    	<a href='<%= data.id %>/1'>Day Out</a>
    </div>
    <div class="col-md-2">
    	<a href='<%= data.id %>/2'>Night Out</a>
    </div>
    <div class="col-md-2">
    	<a href='<%= data.id %>/3'>Eat & Drink</a>
    </div>
    <div class="col-md-2">
    	<a href='<%= data.id %>/4'>Secret Gems</a>
    </div>
    <div class="col-md-2">
    	<a href='<%= data.id %>/5'>Getting Around</a>
    </div>
</div>

<div class="center-block">
<div class="insta container">
	<div class="hashtag">
	<h4>#<%= data.igtag %></h4>
	</div>
	<div id="carousel-insta" class="carousel slide" data-ride="carousel" interval='2000'>
  		<div class="carousel-inner" text-center>
    		<div class="item active">
      			<img src=<%= links[0] %> alt="...">
			</div>

		<% for (var i = 1; i < links.length; i++) { %>
    		<div class="item">
				<img src='<%= links[i] %>' alt="...">
			</div>
				<% } %>
  		</div>
 
	  	<a class="left carousel-control" href="#carousel-insta" role="button" data-slide="prev">
	    	<span class="glyphicon glyphicon-chevron-left"></span>
	  	</a>
	  	<a class="right carousel-control" href="#carousel-insta" role="button" data-slide="next">
	    	<span class="glyphicon glyphicon-chevron-right"></span>
	  	</a>
	</div> 
</div>
</div>







<% include partials/footer.ejs %>